<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->

    <style name="Theme.App" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimaryVariant">@color/colorTextLabelLight</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorPrimary</item>
        <item name="colorSecondaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnSecondary">@color/colorPrimaryDark</item>
        <!-- nav tab default color-->
        <item name="colorOnSurface">@color/colorTextLabelLight</item>
        <item name="android:textColorHint">@color/colorVeryLightGray</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="placeholderTextColor">@color/colorVeryLightGray</item>
        <item name="hintTextColor">@color/colorVeryLightGray</item>

        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>

        <!-- Status bar color. -->
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/app_color</item>

        <!-- Customize your theme here. -->
        <item name="textInputStyle">@style/TextInputLayoutTheme</item>
        <item name="editTextStyle">@style/AppEditTextStyle</item>
        <item name="buttonStyle">@style/AppButtonStyle</item>
        <item name="dialogTheme">@style/GalleryDialog</item>
        <item name="bottomSheetDragHandleStyle">@style/CustomBottomSheetStyle</item>
        <item name="ratingBarStyle">@style/customRatingBar</item>
    </style>

    <style name="GalleryDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <!--<item name="android:windowCloseOnTouchOutside">false</item>-->
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <!--   <item name="android:backgroundDimEnabled">true</item>
           <item name="android:backgroundDimAmount">0.3</item>-->
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>

    </style>
    <style name="SheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <!--<item name="android:windowCloseOnTouchOutside">false</item>-->
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <!--   <item name="android:backgroundDimEnabled">true</item>
           <item name="android:backgroundDimAmount">0.3</item>-->
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
    </style>
    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@color/colorTransparent</item>
        <!-- <item name="android:layout_height">match_parent</item>-->
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>

    <style name="customRatingBar"
        parent="android:style/Widget.Material.RatingBar.Small">
    </style>
    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/colorD9D9D9</item>
        <item name="colorControlActivated">@color/colorYellow</item>
    </style>
    <style name="full_screen_dialog" parent="@android:style/Theme.Translucent">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>


    <style name="AppEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/dp_10</item>
        <item name="android:fontFamily">@font/visby_medium</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textColorHint">@color/textPlaceHolder</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:minHeight">@dimen/dp_40</item>
        <item name="android:background">@drawable/bg_edit_text</item>
    </style>
    <style name="AppButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">text</item>
        <item name="android:padding">@dimen/dp_10</item>
        <item name="android:fontFamily">@font/visby_medium</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:minHeight">@dimen/dp_45</item>
        <item name="android:background">@drawable/button_background_global</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="TextInputLayoutTheme" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="colorOnSurface">@color/colorGray</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/visby_medium</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textColorHint">@color/textPlaceHolder</item>
        <item name="boxStrokeColor">@color/colorGray</item>
        <item name="colorAccent">@color/colorGray</item>
        <item name="android:textSize">@dimen/sp_16</item>
    </style>
    <style name="AppTextInputEditTextTheme" parent="Widget.Design.TextInputEditText">
        <item name="colorOnSurface">@color/textPlaceHolder</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/visby_medium</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textColorHint">@color/textPlaceHolder</item>
        <item name="android:textSize">@dimen/sp_16</item>
    </style>
</resources>